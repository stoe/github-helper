{
  "manifest_version": 2,
  "name": "github-repo-status-ms-edge",
  "description": "Shows an at-a-glance overview of GitHub repositories activity status.",
  "version": "1.0.0",

  "icons": {
    "16": "icons/status16.png",
    "32": "icons/status32.png",
    "48": "icons/status48.png",
    "128": "icons/status128.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "page_action": {
    "default_icon": "icons/status16.png",
    "browser_style": true,
    "show_matches": ["*://*.github.com/*"]
  },

  "permissions": ["activeTab"]
}
